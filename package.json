{
  "name": "drawfolderstructure",
  "displayName": "Draw Folder Structure",
  "description": "",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/krivoox/draw-folder-structure"
  },
  "icon": "src/assets/drawstructurelogo.png",
  "engines": {
    "vscode": "^1.81.0"
  },
  "publisher": "jmkrivocapich",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.generateMarkdownStructure",
        "title": "Generate Markdown structure"
      },
      {
        "command": "extension.linkWithUrl",
        "title": "Link to URL"
      },
      {
        "command": "extension.openUrl",
        "title": "Abrir URL"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.generateMarkdownStructure",
          "when": "resourceScheme == file"
        }
      ],
      "editor/context": [
        {
          "command": "extension.linkWithUrl",
          "when": "resourceScheme == file"
        }
      ]
    },
    "configuration": {
      "title": "Draw Folder Structure",
      "properties": {
        "drawfolderstructure.exclude": {
          "type": "array",
          "default": [
            "node_modules",
            ".git",
            "dist",
            ".next",
            "out"
          ],
          "description": "File and folder patterns to exclude when generating the Markdown structure."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}